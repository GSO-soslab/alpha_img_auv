<launch>

  <arg name="robot_name" default="changeme"/>

  <group ns="$(arg robot_name)">
  
    <!-- Low framerate (e.g., 5hz) -->
    <node name="usb_cam" pkg="usb_cam" type="usb_cam_node" output="screen">
        <param name="video_device" value="/dev/video0" />
        <param name="image_width" value="1280" />
        <param name="image_height" value="720" />
        <param name="pixel_format" value="yuyv" />
        <param name="color_format" value="yuv422p" />
        <param name="camera_frame_id" value="usb_cam" />
        <param name="io_method" value="mmap"/>
        <param name="framerate" value="5"/>
    </node>

    <!-- High framerate, but has colorspace issue -->
    <!-- <node name="usb_cam" pkg="usb_cam" type="usb_cam_node" output="screen">
        <param name="video_device" value="/dev/video0" />
        <param name="image_width" value="1280" />
        <param name="image_height" value="720" />
        <param name="pixel_format" value="mjpeg" />
        <param name="color_format" value="yuv422p" />
        <param name="camera_frame_id" value="usb_cam" />
        <param name="io_method" value="mmap"/>
        <param name="framerate" value="15"/>
    </node> -->

    <!-- Compress the image -->
    <node pkg="image_transport" type="republish" name="republish" output="screen" 
          args="raw in:=usb_cam/image_raw compressed out:=usb_cam/image_compressed"/>

  </group>

</launch>